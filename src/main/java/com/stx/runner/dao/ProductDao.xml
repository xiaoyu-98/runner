<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stx.runner.dao.ProductDao">

    <resultMap type="com.stx.runner.entity.Product" id="ProductMap">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="INTEGER"/>
        <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
        <result property="sellNum" column="sellNum" jdbcType="INTEGER"/>
        <result property="image" column="image" jdbcType="VARCHAR"/>
        <association property="shop" column="sid"
                     select="com.stx.runner.dao.ShopDao.findShopById"
                     javaType="com.stx.runner.entity.Shop"
        >
        </association>
    </resultMap>

    <select id="findBySnameAndPname" resultMap="ProductMap">
        select p.*,s.name as sname from product p,shop s
        where p.sid = s.id
        <if test="sid!=null and sid!=''">
            and p.sid = #{sid}
        </if>
        <if test="pname!=null and pname!=''">
            and p.name = #{pname}
        </if>
    </select>


    <update id="updateProduct">
        update product set name = #{product.name}, price=#{product.price},sid=#{sid} where id = #{product.id}
    </update>

    <delete id="deleteByIds">
        delete from product where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="findAllProducts" resultMap="ProductMap">
        select p.*,s.name as sname from product p,shop s where p.sid = s.id order by s.id
    </select>

    <!--根据商家id查询该商家的所有产品-->
    <select id="findProductsBySid" resultMap="ProductMap">
        select * from product where sid = #{sid}
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="ProductMap">
        select
          id, name, price, createTime, sellNum, image, sid
        from school_shopping.product
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProductMap">
        select
          id, name, price, createTime, sellNum, image, sid
        from school_shopping.product
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ProductMap">
        select
        id, name, price, createTime, sellNum, image, sid
        from school_shopping.product
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="createTime != null">
                and createTime = #{createTime}
            </if>
            <if test="sellNum != null">
                and sellNum = #{sellNum}
            </if>
            <if test="image != null and image != ''">
                and image = #{image}
            </if>
            <if test="sid != null">
                and sid = #{sid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into school_shopping.product(name, price, createTime, sellNum, image, sid)
        values (#{name}, #{price}, #{createTime}, #{sellNum}, #{image}, #{sid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update school_shopping.product
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="createTime != null">
                createTime = #{createTime},
            </if>
            <if test="sellNum != null">
                sellNum = #{sellNum},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="sid != null">
                sid = #{sid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from school_shopping.product where id = #{id}
    </delete>

</mapper>